[Unit]
Description=2018 ROS Master Startup Script

[Service]
Type=oneshot
WorkingDirectory=/mnt/900_2


ExecStartPre=/bin/sh -ec 'sleep 30' ; \
	     /bin/bash -ec "/home/ubuntu/2022RobotCode/set_freq_tx.sh || true" ; \
	     /bin/bash -ec "/home/ubuntu/2022RobotCode/set_freq_tx.sh || true" ; \
	     /bin/sh -ec 'ifup eth0 || true' ;

ExecStart=/bin/bash -ec "/home/ubuntu/2022RobotCode/jetson_setup/master.sh || true" ; \
		  /bin/bash -ec 'sleep 30' ; \
	      /bin/bash -ec "/home/ubuntu/2022RobotCode/jetson_setup/kill.sh || true" ; \
	      /bin/bash -ec "/home/ubuntu/2022RobotCode/jetson_setup/master.sh || true" ;

#having issues with kill.sh
#don't forget to change roscore.xml settings on the jetson
#ExecStartPost=/bin/sh -ec 'sleep 30' ; \
#	      /bin/bash -ec "/home/ubuntu/2022RobotCode/jetson_setup/kill.sh || true" ; \
#	      /bin/bash -ec "/home/ubuntu/2022RobotCode/jetson_setup/master.sh || true" ;

Restart=no

[Install]
WantedBy=default.target
